      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Body font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "min": 12,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base font size",
        "default": 16
      },
      {
        "type": "range",
        "id": "font_size_heading",
        "min": 20,
        "max": 48,
        "step": 2,
        "unit": "px",
        "label": "Heading font size",
        "default": 32
      }
    ]
  },
