    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "shopify",
    "theme",
    "ecommerce",
    "online-store-2.0",
    "clothing",
    "apparel",
