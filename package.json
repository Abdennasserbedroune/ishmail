{
  "name": "ishmail-apparel-theme",
  "version": "1.0.0",
  "description": "Modern Shopify Online Store 2.0 theme for clothing ecommerce",
  "author": "Ishmail",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "shopify theme dev",
    "push": "shopify theme push",
    "pull": "shopify theme pull",
    "check": "shopify theme check",
    "lint": "npm run lint:liquid && npm run lint:js && npm run lint:css",
    "lint:liquid": "shopify theme check",
    "lint:js": "eslint assets/**/*.js",
    "lint:css": "stylelint assets/**/*.css",
