{% if section.settings.show_announcement %}
  <div class="announcement-bar" role="region" aria-label="{{ 'sections.announcement.announcement' | t }}" style="background-color: {{ section.settings.color_background }}; color: {{ section.settings.color_text }};">
    <div class="announcement-bar__content page-width">
      {% if section.settings.text != blank %}
        <p class="announcement-bar__text">
          {% if section.settings.link != blank %}
            <a href="{{ section.settings.link }}" class="announcement-bar__link">
              {{ section.settings.text | escape }}
            </a>
          {% else %}
            {{ section.settings.text | escape }}
          {% endif %}
        </p>
      {% endif %}
    </div>
  </div>
{% endif %}

<style>
  .announcement-bar {
    padding: 0.75rem 0;
    text-align: center;
  }
  .announcement-bar__text {
    margin: 0;
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }
  .announcement-bar__link {
    color: inherit;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
    transition: opacity 0.2s;
  }
  .announcement-bar__link:hover {
    opacity: 0.7;
  }
</style>

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "default": true,
      "label": "Show announcement"
    },
    {
      "type": "text",
      "id": "text",
      "default": "Welcome to our store",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "color_background",
      "default": "#000000",
      "label": "Background"
    },
    {
      "type": "color",
      "id": "color_text",
      "default": "#ffffff",
      "label": "Text"
    }
  ]
}
{% endschema %}
