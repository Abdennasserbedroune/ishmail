{{ 'section-collage.css' | asset_url | stylesheet_tag }}

<div class="collage section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="collage__heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}

    <div class="collage__grid">
      {% for block in section.blocks %}
        <div class="collage__item" {{ block.shopify_attributes }}>
          {% if block.settings.collection != blank %}
            {% assign collection = collections[block.settings.collection] %}
            <a href="{{ collection.url }}" class="collage__link">
              {% if collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 600 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  loading="lazy"
                  width="{{ collection.featured_image.width }}"
                  height="{{ collection.featured_image.height }}"
                >
              {% else %}
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
              <div class="collage__overlay">
                <h3 class="collage__title">{{ collection.title | escape }}</h3>
              </div>
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collage",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collage"
    }
  ],
  "max_blocks": 6
}
{% endschema %}
