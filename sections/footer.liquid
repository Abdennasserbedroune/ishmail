<link rel="stylesheet" href="{{ 'component-footer.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-footer.css' | asset_url | stylesheet_tag }}</noscript>

<footer class="footer">
  <div class="footer__content page-width">
    <div class="footer__blocks">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'link_list' %}
            <div class="footer__block" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h3 class="footer__heading">{{ block.settings.heading | escape }}</h3>
              {% endif %}
              {% if block.settings.menu != blank %}
                <ul class="footer__list" role="list">
                  {% for link in block.settings.menu.links %}
                    <li class="footer__list-item">
                      <a href="{{ link.url }}" class="footer__link">
                        {{ link.title | escape }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>

          {% when 'text' %}
            <div class="footer__block footer__block--text" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h3 class="footer__heading">{{ block.settings.heading | escape }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="footer__text rte">
                  {{ block.settings.text }}
                </div>
              {% endif %}
            </div>

          {% when 'newsletter' %}
            <div class="footer__block footer__block--newsletter" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h3 class="footer__heading">{{ block.settings.heading | escape }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="footer__newsletter-text">
                  {{ block.settings.text }}
                </div>
              {% endif %}
              {% form 'customer', class: 'footer__newsletter-form' %}
                {% if form.posted_successfully? %}
                  <div class="form-success">
                    {{ 'newsletter.success' | t }}
                  </div>
                {% endif %}
                <div class="footer__newsletter-input-wrapper">
                  <label for="footer-email" class="visually-hidden">{{ 'newsletter.email_placeholder' | t }}</label>
                  <input
                    type="email"
                    name="contact[email]"
                    id="footer-email"
                    class="footer__newsletter-input"
                    placeholder="{{ 'newsletter.email_placeholder' | t }}"
                    aria-required="true"
                    required
                  >
                  <button type="submit" class="footer__newsletter-button button" name="commit">
                    {{ 'newsletter.submit' | t }}
                  </button>
                </div>
              {% endform %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_social %}
      <div class="footer__social">
        {% render 'social-icons' %}
      </div>
    {% endif %}

    <div class="footer__bottom">
      <div class="footer__copyright">
        <small>&copy; {{ 'now' | date: '%Y' }} {{ shop.name | escape }}. {{ 'footer.copyright' | t }}</small>
      </div>
      {% if section.settings.show_payment_icons %}
        <div class="footer__payment">
          {% render 'payment-icons' %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "Show social media icons"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "default": true,
      "label": "Show payment icons"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Subscribe",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Subheading"
        }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}
