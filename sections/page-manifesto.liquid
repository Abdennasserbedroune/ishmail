{{ 'section-manifesto.css' | asset_url | stylesheet_tag }}

<section class="manifesto section-padding" id="section-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.kicker != blank or section.settings.heading != blank or section.settings.intro != blank %}
      <header class="manifesto__header">
        {% if section.settings.kicker != blank %}
          <p class="manifesto__label">{{ section.settings.kicker | escape }}</p>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h1 class="manifesto__title">{{ section.settings.heading | escape }}</h1>
        {% else %}
          <h1 class="visually-hidden">{{ page.title | escape }}</h1>
        {% endif %}

        {% if section.settings.intro != blank %}
          <div class="manifesto__intro rte">
            {{ section.settings.intro }}
          </div>
        {% endif %}
      </header>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="manifesto__blocks">
        {% for block in section.blocks %}
          {%- liquid
            assign loop_index = forloop.index
            assign alternates = section.settings.alternating_layout
            assign computed_position = block.settings.image_position

            if alternates
              assign is_even = loop_index | modulo: 2
              if is_even == 0
                assign computed_position = 'right'
              else
                assign computed_position = 'left'
              endif
            endif
          -%}
          {% render 'manifesto-block',
            orientation: computed_position,
            kicker: block.settings.kicker,
            heading: block.settings.heading,
            body: block.settings.body,
            image: block.settings.image,
            image_alt: block.settings.image_alt,
            fallback_image: block.settings.fallback_image,
            shopify_attributes: block.shopify_attributes
          %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Manifesto page",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Section label",
      "default": "Manifesto"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "We create garments for enduring wardrobes"
    },
    {
      "type": "richtext",
      "id": "intro",
      "label": "Intro",
      "default": "<p>Our manifesto is a living document. It guides how we design, craft, and show up for the community that wears Ishmail. Explore the pillars that shape everything we do.</p>"
    },
    {
      "type": "checkbox",
      "id": "alternating_layout",
      "label": "Alternating layout",
      "info": "Automatically alternate image position (left/right) for each block",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story block",
      "settings": [
        {
          "type": "text",
          "id": "kicker",
          "label": "Block label"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Block heading",
          "default": "Honoring the process"
        },
        {
          "type": "richtext",
          "id": "body",
          "label": "Text",
          "default": "<p>We obsess over every stitch, cut, and finish. Each collection is developed with rigorous attention to detail so that it feels timeless today and relevant tomorrow.</p>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image alt text",
          "info": "Describe the image for accessibility. Defaults to the block heading."
        },
        {
          "type": "select",
          "id": "fallback_image",
          "label": "Fallback theme image",
          "info": "Used when no image is selected or while previewing the theme.",
          "default": "",
          "options": [
            { "value": "", "label": "None" },
            { "value": "manifesto-block-1.svg", "label": "Studio draping illustration" },
            { "value": "manifesto-block-2.svg", "label": "Textile study graphic" },
            { "value": "manifesto-block-3.svg", "label": "Loom details graphic" },
            { "value": "manifesto-block-4.svg", "label": "Community gathering graphic" }
          ]
        },
        {
          "type": "select",
          "id": "image_position",
          "label": "Image position",
          "info": "Only applies when the alternating layout setting is turned off.",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Manifesto page"
    }
  ]
}
{% endschema %}
