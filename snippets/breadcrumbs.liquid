{% unless template == 'index' or template == 'cart' %}
  <nav class="breadcrumbs" role="navigation" aria-label="breadcrumbs">
    <a href="{{ routes.root_url }}" title="{{ 'general.breadcrumbs.home' | t }}">{{ 'general.breadcrumbs.home' | t }}</a>
    
    {% if template contains 'collection' and collection.handle %}
      <span aria-hidden="true">&rsaquo;</span>
      {% if current_tags %}
        <a href="{{ collection.url }}" title="{{ collection.title }}">{{ collection.title }}</a>
        <span aria-hidden="true">&rsaquo;</span>
        <span>{{ current_tags | join: ' + ' }}</span>
      {% else %}
        <span>{{ collection.title }}</span>
      {% endif %}
    
    {% elsif template contains 'product' %}
      {% if collection.url %}
        <span aria-hidden="true">&rsaquo;</span>
        <a href="{{ collection.url }}" title="{{ collection.title }}">{{ collection.title }}</a>
      {% endif %}
      <span aria-hidden="true">&rsaquo;</span>
      <span>{{ product.title }}</span>
    
    {% elsif template contains 'page' %}
      <span aria-hidden="true">&rsaquo;</span>
      <span>{{ page.title }}</span>
    
    {% elsif template contains 'blog' %}
      <span aria-hidden="true">&rsaquo;</span>
      {% if current_tags %}
        <a href="{{ blog.url }}" title="{{ blog.title }}">{{ blog.title }}</a>
        <span aria-hidden="true">&rsaquo;</span>
        <span>{{ current_tags | join: ' + ' }}</span>
      {% else %}
        <span>{{ blog.title }}</span>
      {% endif %}
    
    {% elsif template contains 'article' %}
      <span aria-hidden="true">&rsaquo;</span>
      <a href="{{ blog.url }}" title="{{ blog.title }}">{{ blog.title }}</a>
      <span aria-hidden="true">&rsaquo;</span>
      <span>{{ article.title }}</span>
    
    {% else %}
      <span aria-hidden="true">&rsaquo;</span>
      <span>{{ page_title }}</span>
    {% endif %}
  </nav>
{% endunless %}
